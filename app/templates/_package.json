{
	"name": "<%= moduleName %>",
	"version": "0.1.0",
	"description": "My module",
	"license": "MIT",
	"repository": "<%= githubUsername %>/<%= moduleName %>",
  "scripts": {
    "test": "mocha",
    "test-travis": "node node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha --report lcovonly -- --reporter dot"
  },
	"author": {
		"name": "<%= name %>",
		"email": "<%= email %>",
		"url": "<%= humanizedWebsite %>"
	},<% if (cli) { %>
	"bin": "cli.js",<% } %>
	"engines": {
		"node": ">=0.10.0"
	},
	"scripts": {
		"test": "mocha"
	},
	"files": [
		"index.js"<% if (cli) { %>,
		"cli.js"<% } %>
	],
	"keywords": [<% if (cli) { %>
		"cli-app",
		"cli",<% } %>
		""
	],
	"dependencies": {<% if (cli) { %>
		"meow": "^3.0.0"
	<% } %>},
	"devDependencies": {
    "chai": "^3.2.0",
    "eslint": "^0.24.1",
    "eslint-config-airbnb": "0.0.7",
    "eslint-plugin-react": "^3.2.2",
    "istanbul": "^0.3.17",
    "mocha": "*"
	}
}
